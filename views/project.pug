extends layout.pug

block content

  nav.nav
    a(href='/')
      span &larr;
      |  Back

  article.portfolio-projects
    .inner-wrapper.flex-row-wrap.two-col
      .project-info-box.box
        h1= projectData.project_name

        p= projectData.description

      .project-tech-links-box.box
        h6 Technologies
        ul
          each tech in projectData.technologies
            li= tech

        a.btn-link(target="_blank", href= `${projectData.live_link}`) Live Demo
        a.btn-link(target="_blank", href= `${projectData.github_link}`) GitHub Repo

    .project-img-box.box

      img.project-img(src= `${projectData.image_urls[1]}`, alt=`${projectData.project_name}`)
      img.project-img(src=`${projectData.image_urls[2]}`, alt=`${projectData.project_name}`)


    nav.nav
      a(href='/')
        span &larr;
        |  Back
